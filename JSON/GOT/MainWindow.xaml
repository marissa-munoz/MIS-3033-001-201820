<Window x:Class="GOT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GOT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://lovinlife.com/wp-content/uploads/2018/09/Dog.jpg"></ImageBrush>
        </Grid.Background>
        <TextBlock x:Name="text" HorizontalAlignment="Left" Margin="29,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="159" Width="217" Foreground="White" FontSize="24"/>
    </Grid>

</Window>
